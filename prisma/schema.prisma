generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String  @id @default(cuid())
  email     String  @unique
  password  String
  nickName  String
  userRole  String
  userImg   String?
}

model Post {
  postId    Int   @id @default(autoincrement())
  writer    String
  title     String
  createdAt DateTime @default(now())
  contents  String?
  postImg   String?
  comment   Int?      @default(0)
}

model Comment {
  Id        String   @id @default(cuid())
}
